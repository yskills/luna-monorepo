{
  "version": "1.0.0",
  "description": "Framework-agnostischer Contract f√ºr Luna Chat + Voice + Model + Avatar + Web",
  "uiRules": {
    "showAvatarOnlyInConversationMode": true,
    "speechOnlyInConversationMode": true,
    "showOrb": false
  },
  "api": {
    "chat": {
      "send": {
        "method": "POST",
        "path": "/assistant/chat",
        "body": {
          "characterId": "luna",
          "mode": "normal",
          "message": "string"
        }
      }
    },
    "voice": {
      "config": { "method": "GET", "path": "/assistant/voice/config?characterId=luna" },
      "settingsGet": { "method": "GET", "path": "/assistant/voice/settings?characterId=luna" },
      "settingsSet": { "method": "POST", "path": "/assistant/voice/settings" },
      "providers": { "method": "GET", "path": "/assistant/voice/providers" }
    },
    "avatar": {
      "catalog": { "method": "GET", "path": "/assistant/avatars/catalog" }
    },
    "model": {
      "settings": { "method": "GET", "path": "/assistant/settings?characterId=luna" },
      "lunaPresets": { "method": "GET", "path": "/assistant/luna/presets" },
      "applyLunaPreset": { "method": "POST", "path": "/assistant/luna/presets/apply" },
      "recommendedEnv": {
        "LLM_PROVIDER": "ollama",
        "LLM_MODEL": "luna:latest",
        "ASSISTANT_FORCE_CHARACTER_ID": "luna"
      }
    },
    "web": {
      "searchPreview": {
        "method": "POST",
        "path": "/assistant/web-search/preview",
        "body": {
          "characterId": "luna",
          "message": "string"
        }
      },
      "recommendedEnv": {
        "ASSISTANT_WEB_SEARCH_ENABLED": "true",
        "ASSISTANT_WEB_SEARCH_CHARACTERS": "luna",
        "ASSISTANT_WEB_SEARCH_MAX_ITEMS": "3",
        "ASSISTANT_WEB_SEARCH_TIMEOUT_MS": "9000"
      }
    }
  }
}
