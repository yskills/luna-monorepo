{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Luna Full Stack (Monorepo F5)",
      "configurations": [
        "Luna Stack (Monorepo)",
        "Luna Browser"
      ],
      "stopAll": true
    }
  ],
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Luna Stack (Monorepo)",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "preLaunchTask": "Kill Luna Stack Ports (Monorepo)",
      "postDebugTask": "Kill Luna Stack Ports (Monorepo)",
      "autoAttachChildProcesses": true,
      "console": "internalConsole"
    },
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Luna Browser",
      "url": "http://127.0.0.1:5173",
      "webRoot": "${workspaceFolder}/apps/personal-luna"
    }
  ]
}
